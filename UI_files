ui/
├── SmartDABApp.java              # Entry point
├── view/
│   ├── MainFrame.java            # JFrame principale  (qui c'è l'autenticazione) 
│   ├── MainPanel.java            # Contenitore navigazione 
│   ├── stanze/
|   |   ├── StanzeFormPanel.java   # CRUD stanze
│   │   └── StanzePanel.java      # Lista stanze
│   ├── scenari/
│   |   ├── ScenariPanel.java         # Lista scenari e attivazione e disattivazione 
│   |   ├── ScenarioDetailPanel.java  # Dettaglio configurazioni
│   |   └── ScenarioFormPanel.java    # Form CRUD
|   └── dispositivi
|       ├── DispositiviPanel.java     # Lista dei dispositivi 
|       └── DispositiviForm.java      # Dispositivi CRUD
|
└── controller/
    ├── MainAction.java           # Navigazione
    ├── StanzeAction.java         # Logica stanze
    └── ScenariAction.java        # CRUD scenari


